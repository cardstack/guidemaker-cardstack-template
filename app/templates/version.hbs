<aside class="sidebar">
  <label for="version-select" class="visually-hidden">Guides version</label>

  {{#if versions}}
    {{#power-select class="version-select" ariaLabel=model.version selected=model.version options=versions onchange=(action 'selectVersion') as |version|}}
      {{shorten-version version}}
    {{/power-select}}
  {{/if}}

  <nav class='toc-container {{if versions 'versions'}}' aria-label='table of contents'>
    {{table-of-contents data=model.pages version=model.version currentPage=page.currentPage currentSection=page.currentSection}}
  </nav>

  {{!-- <%= link_to "&#11014; Back to Top".html_safe, "#", class: "back-to-top" %> --}}
</aside>

{{outlet}}
